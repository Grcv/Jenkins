pipeline {
    agent any
    stages{

        stage("Comenzando despliegue"){
            steps{
                echo "Comenzando despliegue"   
            }
        }
        stage('Clonar Repositorios Secundarios') {
            steps {
                dir('backend_repo') {
                    git credentialsId: 'github_credentials', url: 'https://github.com/Grcv/aceros_backend.git', branch: 'main'
                }
                dir('frontend_repo') {
                    git credentialsId: 'github_credentials',url: 'https://github.com/Grcv/aceros_ui.git', branch: 'main'
                }
            
            }
        }   
        stage('Move files') {
            steps {
                sh '''
                    mkdir -p app/frontend app/backend app/nginx
                    cp docker-compose.yml app/
                    cp -r nginx/* app/nginx/
                    cp -r frontend_repo/aceros/* app/frontend/
                    cp -r backend_repo/backend/* app/backend/
                    ls -la app/
                '''

            }

        }
          
    stage('Construir imágenes Docker') {
        steps {
            dir('app') {
                sh 'ls -la'
                sh 'docker compose build'
            }
        }
    }

    stage('Desplegar') {
        steps {
            dir('app') {
                sh 'docker compose down'
                sh 'docker compose up -d'
            }
        }
    }
  

    }
    post {
        success {
            echo '✅ Despliegue exitoso.'
            deleteDir()
        }
        failure {
            echo '❌ Fallo durante el despliegue.'
            deleteDir()
        }
    }  

}