pipeline {
    agent any
    stages{
        stage("Comenzando despliegue"){
            steps{
                echo "Comenzando despliegue"   
            }
        }
        stage('Clonar Repositorios Secundarios') {
            steps {
                dir('backend') {
                    git url: 'https://github.com/Grcv/aceros_backend.git', branch: 'main'
                }
                dir('frontend') {
                    git url: 'https://github.com/Grcv/aceros_ui.git', branch: 'main'
                }
            
            }
        }   
        stage('Build/Test') {
            steps {
                echo 'Aqu√≠ puedes ejecutar scripts, compilar o correr tests.'
            }
        }        

    }
}