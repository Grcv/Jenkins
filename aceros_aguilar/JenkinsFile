pipeline {
    agent any
    stages{

        stage("Comenzando despliegue"){
            steps{
                echo "Comenzando despliegue"   
            }
        }
        stage('Clonar Repositorios Secundarios') {
            steps {
                dir('backend_repo') {
                    git credentialsId: 'github_credentials', url: 'https://github.com/Grcv/aceros_backend.git', branch: 'main'
                }
                dir('frontend_repo') {
                    git credentialsId: 'github_credentials',url: 'https://github.com/Grcv/aceros_ui.git', branch: 'main'
                }
            
            }
        }   
        stage('Move files') {
            steps {
                sh 'mkdir app'
                sh 'mkdir  app/frontend'
                sh 'mkdir  app/backend'
                sh 'cp aceros_aguilar/docker-compose.yml app/'
                sh 'cp -r aceros_aguilar/nginx/* app/nginx/'
                sh 'cp  frontend_repo/aceros/* app/frontend/'
                sh 'cp -r  backend_repo/backend/* app/backend/'
                sh 'ls -la app/'


            }

        }
          
        stage('Construir imágenes Docker') {
            steps {
                sh 'ls -la'
                sh 'docker compose build'
            }
        }

        stage('Desplegar') {
            steps {
                sh 'docker-compose down'
                sh 'docker-compose up -d'
            }
        } 
  

    }
    post {
        success {
            echo '✅ Despliegue exitoso.'
            deleteDir()
        }
        failure {
            echo '❌ Fallo durante el despliegue.'
            deleteDir()
        }
    }  

}