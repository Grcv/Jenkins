pipeline {
    agent any
    environment {
        DOCKER_USER = 'gerardocastro'
        DOCKER_REGISTRY = 'https://index.docker.io/v1/'
        DOCKER_CREDENTIALS_ID = 'dockerhub'
        TAG = "${env.BUILD_NUMBER}"
    }
    stages {

        stage("Comenzando despliegue"){
            steps{
                echo "Comenzando construccion y subida de imagenes"
            }
        }
        stage('Clonar Repositorios Secundarios') {
            steps {
                dir('backend_repo') {
                    git credentialsId: 'github_credentials', url: 'https://github.com/Grcv/prediccion_loteria_backend.git', branch: 'main'
                }
                dir('frontend_repo') {
                    git credentialsId: 'github_credentials',url: 'https://github.com/Grcv/prediccion_loteria.git', branch: 'main'
                }
            }
        }
        stage('Move files') {
            steps {
                sh '''
                    mkdir -p app/frontend
                    mkdir -p app/backend
                    cp loteria/docker-compose.yml app/
                    cp -r frontend_repo/prediccion_loteria/* app/frontend/
                    cp -r backend_repo/loteria_backend/* app/backend/
                '''
            }
        }

        stage('Construir imágenes Docker') {
            steps {
                dir('app') {
                    sh 'docker compose build'
                }
            }
        }

        stage('Login y Push a Docker Hub') {
            steps {
                dir('app') {
                    script {
                        docker.withRegistry(DOCKER_REGISTRY, DOCKER_CREDENTIALS_ID) {
                            sh """
                                docker tag app-frontend ${DOCKER_USER}/loteria_frontend:latest
                                docker tag app-backend ${DOCKER_USER}/loteria_backend:latest
                                docker push ${DOCKER_USER}/loteria_frontend:latest
                                docker push ${DOCKER_USER}/loteria_backend:latest
                            """
                        }
                    }
                }
            }
        }

    }
    post {
        success {
            echo '✅ Construcción y subida a Docker Hub exitosa.'
            deleteDir()
        }
        failure {
            echo '❌ Falló la construcción o subida a Docker Hub.'
            deleteDir()
        }
    }
}
